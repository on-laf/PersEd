<div class="container my-5">
  <div class="d-flex">
    <h1 style="flex-grow: 1;">Homeworks</h1>
    <%= link_to 'Create new homework', new_flashcard_homework_path, class: "our-btn btn-outline-teal my-2" %>
  </div>
  <% if !@flashcard_homeworks_draft.empty? %>
    <p style="color: #00afb9; font-size: 20px; margin-bottom: 0; margin-top: 16px;">Drafts <i class="far fa-save"></i></p>
    <div class="row">
      <% @flashcard_homeworks_draft.each do |homework| %>
        <div class="col-12 col-md-6 col-lg-4">
          <%= link_to flashcard_homework_path(homework), class: "flashcard-link" do %>
            <div class="card flashcard_sets_card flashcard-sets-card-grow my-3">
              <div class="flashcard_sets_card_infos">
                <h2><%= homework.name %></h2>
                <p><%= homework.group.class_name %></p>
                <p><%= homework.due_date.nil? ? "No due date" : homework.due_date.strftime("Due on %d/%m/%Y") %></p>
              </div>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>
  <% end %>
  <% if !@flashcard_homeworks_sent.empty? %>
    <p style="color: #00afb9; font-size: 20px; margin-bottom: 0; margin-top: 16px;">Sent <i class="far fa-paper-plane"></i></p>
    <div class="row">
      <% @flashcard_homeworks_sent.each do |homework| %>
        <div class="col-12 col-md-6 col-lg-4">
          <%= link_to flashcard_homework_path(homework), class: "flashcard-link" do %>
            <div class="card flashcard_sets_card flashcard-sets-card-grow my-3">
              <div class="flashcard_sets_card_infos">
                <h2><%= homework.name %></h2>
                <p><%= homework.group.class_name %></p>
                <p><%= homework.due_date.nil? ? "No due date" : homework.due_date.strftime("Due on %d/%m/%Y") %></p>
              </div>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>
  <% end %>
</div>
