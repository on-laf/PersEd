index page for quiz questions

<div class="container">
  <div class="row">
    <% @quiz_questions.each do |q| %>
      <div class="flash_card_sets_card col-12 col-md 6 col-lg-6">
        <h3>Q: <%= q.question %></h3>
        <div class="d-flex justify-content-between"><p>A:<%= q.A %></p><p><%= q.correct_answer == 1 ? "checkedbox" : "box" %></p></div>
        <div class="d-flex justify-content-between"><p>B:<%= q.B %></p><p><%= q.correct_answer == 2 ? "checkedbox" : "box" %></p></div>
        <div class="d-flex justify-content-between"><p>C:<%= q.C %></p><p><%= q.correct_answer == 3 ? "checkedbox" : "box" %></p></div>
        <div class="d-flex justify-content-between"><p>D:<%= q.D %></p><p><%= q.correct_answer == 4 ? "checkedbox" : "box" %></p></div>
      </div>
    <% end %>
  </div>
</div>
