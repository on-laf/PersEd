<div class="container my-5">
  <h1>Edit the class' name</h1>

  <%= simple_form_for @group do |f| %>
    <%= f.input :class_name %>
    <div>
      <%= f.submit 'Update class', class: 'our-btn btn-marine mr-2' %>
      <%= link_to 'Cancel', groups_path, class: 'our-btn btn-salmon' %>
    </div>
  <% end %>
</div>

