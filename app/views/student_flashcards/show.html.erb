<%= link_to 'Back', flashcard_set_flashcard_template_student_flashcard_path, class: "btn btn-outline-dark m-2" %>
  <div class="container ">
    <div class="card flashcard_template_card">
      <div class="d-flex mb-3 justify-content-between">
        <h1 style="flex-grow: 1;">
          <%= @student_flashcard.question %>
          <%= link_to edit_flashcard_set_flashcard_template_student_flashcard_path(@student_flashcard), class: "icon-link" do %>
        </h1>
        <h1>
          <i class="fas fa-pencil-alt text-dark"></i>
          <% end %>
          <%= link_to flashcard_set_flashcard_template_student_flashcard_path(@student_flashcard),
              method: :delete,
              data: { confirm: "Are you sure you want to delete this flashcard?" } do %>
              <i class="fas fa-trash-alt text-dark"></i>
          <% end %>
        </h1>
        <%= simple_form_for [@flashcard_set, @flashcard_template, @student_flashcard] do |f| %>
          <% f.input :notes, label: "Add a student note to this flashcard" %>
          <%= f.submit 'Add note', class: 'btn btn-outline-dark' %>
        <% end %>
      </div>
    </div>
  </div>


