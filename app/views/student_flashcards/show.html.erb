<%= link_to 'Back', student_flashcard_set_path(@student_flashcard_set), class: "our-btn btn-salmon m-2" %>
<div class="container mb-5">
  <div class="card flashcard_template_card">
    <div class="d-flex mb-3 justify-content-between">
      <h1 style="flex-grow: 1;"><%= @student_flashcard.question %></h1>
      <h1>
        <%= link_to edit_student_flashcard_set_student_flashcard_path(@student_flashcard_set, @student_flashcard), class: "icon-link" do %>
          <i class="fas fa-pencil-alt txt-link-marine"></i>
        <% end %>
        <%= link_to student_flashcard_set_student_flashcard_path(@student_flashcard_set, @student_flashcard),
            method: :delete,
            data: { confirm: "Are you sure you want to delete this flashcard?" } do %>
            <i class="fas fa-trash-alt txt-link-marine"></i>
        <% end %>
      </h1>
    </div>
  </div>
</div>
