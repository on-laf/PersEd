<div class="container">
  <div class="row">
    <% flashcard_templates.order(updated_at: :desc).each do |fs| %>
      <div class="col-12 col-md-6 col-lg-4">
        <%= link_to "#", class: "flashcard-link" do %>
          <div class="card my-3">
            <div>
              <p><strong><%= fs.question %></strong></p>
              <p><%= fs.answer %></p>
              <%= link_to edit_flashcard_set_flashcard_template_path(flashcard_set, fs), class: "icon-link" do %>
                <i class="fas fa-pencil-alt txt-link-marine"></i>
              <% end %>
              <%= link_to flashcard_set_flashcard_template_path(flashcard_set, fs),
                  method: :delete,
                  data: { confirm: "Are you sure you want to delete this flashcard?" } do %>
                  <i class="fas fa-trash-alt txt-link-marine"></i>
              <% end %>
            </div>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
