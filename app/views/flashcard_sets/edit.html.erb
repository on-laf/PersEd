<div class="container my-5">
  <h1>Edit the flashcard set's name</h1>

  <%= simple_form_for @flashcard_set do |f| %>
    <%= f.input :name %>
    <div>
      <%= f.button :submit, class: 'our-btn btn-marine mr-2' %>
      <%= link_to 'Cancel', flashcard_set_path(@flashcard_set), class: 'our-btn btn-salmon' %>
    </div>
  <% end %>
</div>
